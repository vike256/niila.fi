---
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter, url } = Astro.props;
---
<html>
    <head>
        <title>{frontmatter.title}</title>
        <meta name="viewport" content="width=device-width, initial-scale:1.0">
    </head>
    <body>
        <div class="header">
            <div class="header-flex">
                <a href="/" id="home">Niila Viinam√§ki</a>
                <div class="header-right">
                    <a href="/posts/" style="text-align: end;">Posts</a>
                    <a href="/projects/">Projects</a>
                    <a href="/about/">About</a>
                </div>
            </div>
            <hr>
        </div>
        <slot />
        <div class="footer">
            <hr>
            :)
        </div>
    </body>
</html>

<style is:global>
    body {
        font-family: Open Sans, Arial;
        font-size: 16px;
        background-color: white;
        color: #454545;
        padding: 0.5em 1em;
        margin: 0px auto;
        max-width: 800px;
        line-height: 1.4;
        hyphens: auto;
    }

    .header-flex {
        display: flex;
        margin: 8px 0px;
    }

    .header a {
        color: inherit;
        text-decoration: inherit;
        border-bottom: none;
    }

    a {
        color: orangered;
        text-decoration: none;
        max-width: fit-content;
    }

    a:hover {
        color: orangered;
        text-decoration: underline;
    }

    .header-right {
        flex: 1;
        text-align: end;
    }

    .header-right a {
        margin: 0px 5px;
    }

    #home {
        flex: 1;
        font-weight: bold;
    }

    .header {
        margin-bottom: 16px;
    }

    .footer {
        margin-top: 16px;
    }

    hr {
        margin: 8px 0px;
    }

    h1, h2, h3,
    h4, h5, h6 {
        border-bottom: 1px solid #ccc;
        margin: 16px 0px;
    }

    img {
        max-width: 1vm;
    }

    #profile-img {
        border-radius: 50%;
        width: 33%;
        height: auto;
        display: inline-block;
    }

    .profile-card {
        display: flex;
        column-gap: 32px;
    }

    .profile-card-right {
        align-self: center;
    }
</style>