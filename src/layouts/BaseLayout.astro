---
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter, url } = Astro.props;
---
<html>
    <head>
        <title>{frontmatter.title}</title>
        <meta name="viewport" content="width=device-width, initial-scale:1.0">
    </head>
    <body>
        <div class="header">
            <div class="header-flex">
                <a href="/" id="home">Niila Viinam√§ki</a>
                <div class="header-right">
                    <a href="/posts/" style="text-align: end;">Posts</a>
                    <a href="/projects/">Projects</a>
                    <a href="/about/">About</a>
                </div>
            </div>
            <hr>
        </div>
        <slot />
        <div class="footer">
            <hr>
            :)
        </div>
    </body>
</html>

<style is:global>
    html {
        background-color: white;
        color: #111111;
        font-family: sans-serif;
        margin: 8px auto;
        max-width: 95vw;
    }

    * {
        box-sizing: border-box;
        margin: auto;
        max-width: 650px;
    }

    .header-flex {
        display: flex;
        margin: 8px 0px;
    }

    .header a {
        color: inherit;
        text-decoration: inherit;
        border-bottom: none;
    }

    a {
        color: orangered;
        text-decoration: none;
        border-bottom: 2px solid orangered;
        max-width: fit-content;
    }

    .header a:hover {
        color: orangered;
        border-bottom: 2px solid orangered;
    }

    .header-right {
        flex: 1;
        text-align: end;
    }

    .header-right a {
        margin: 0px 5px;
    }

    #home {
        flex: 1;
        font-weight: bold;
    }

    .header {
        margin-bottom: 16px;
    }

    .footer {
        margin-top: 16px;
    }

    hr {
        margin: 8px 0px;
    }

    h1, h2, h3,
    h4, h5, h6 {
        border-bottom: 1px solid #ccc;
        margin: 16px 0px;
    }
</style>